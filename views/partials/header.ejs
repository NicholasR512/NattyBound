<header>
    <!-- Container for the navigation bar -->
    <div class="nav-container">
        <nav class="navbar">
            <!-- Logo with a link to the homepage -->
            <h1 id="navbar-logo"><a href="/">RoverWork</a></h1>
            
            <!-- Navigation menu -->
            <ul class="nav-menu">
                <!-- Always-visible Home link -->
                <li><a href="/" class="nav-links">Home</a></li>
                
                <!-- Conditional rendering based on user roles -->
                <% if (currentUser) { %>
                    <% if (currentUser.role === 'Admin') { %>
                        <!-- Links visible to Admin users -->
                        <li><a href="/jobs" class="nav-links">Current Jobs</a></li>
                        <li><a href="/jobs/pending" class="nav-links">Pending Jobs</a></li>
                        <li><a href="/admin/messages" class="nav-links">View Messages</a></li>
                    <% } else if (currentUser.role === 'Business') { %>
                        <!-- Links visible to Business users -->
                        <li><a href="/jobs/new" class="nav-links">Add Job</a></li>
                        <li><a href="/jobs" class="nav-links">Current Jobs</a></li>
                    <% } else if (currentUser.role === 'Student') { %>
                        <!-- Links visible to Student users -->
                        <li><a href="/jobs" class="nav-links">Search Jobs</a></li>
                        <li><a href="/contact" class="nav-links">Contact Us</a></li>
                    <% } %>
                    <!-- Logout link available to all logged-in users -->
                    <li><a href="/auth/logout" class="nav-links nav-links-btn">Logout</a></li>
                <% } else { %>
                    <!-- Links for users who are not logged in -->
                    <li><a href="/auth/login" class="nav-links">Login</a></li>
                    <li><a href="/auth/register" class="nav-links nav-links-btn">Register</a></li>
                <% } %>
            </ul>
            
            <!-- Hamburger menu icon for mobile view -->
            <div class="menu-toggle" id="mobile-menu">
                <span class="bar"></span>
                <span class="bar"></span>
                <span class="bar"></span>
            </div>
        </nav>
    </div>
</header>

<!-- JavaScript for handling navbar functionality -->
<script src="/script/navbar.js"></script>
